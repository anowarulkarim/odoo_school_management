<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="school_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="school">
                <t t-call="web.external_layout">
                    <div class="page">
                         Header Section
                        <div style="text-align: center; margin-bottom: 30px;">
                            <h1 style="color: #2E86C1; font-size: 36px; text-transform: uppercase;">
                                <t t-esc="school.name"/>
                            </h1>
                            <p style="font-size: 18px; color: #616A6B;">
                                Established: <t t-esc="school.established_date or 'N/A'"/>
                            </p>
                        </div>

                        <!-- Contact Details -->
                        <div style="margin-bottom: 20px;">
                            <h3 style="border-bottom: 2px solid #2E86C1; color: #2E86C1; padding-bottom: 5px;">Contact Information</h3>
                            <p style="font-size: 16px; line-height: 1.5;">
                                <strong>Address:</strong> <t t-esc="school.address or 'N/A'"/><br/>
                                <strong>Phone:</strong> <t t-esc="school.contact or 'N/A'"/><br/>
                                <strong>Email:</strong> <t t-esc="school.email or 'N/A'"/><br/>
                                <strong>Website:</strong><a t-att-href="'http://' + school.website if school.website else '#'" target="_blank">
    <t t-esc="school.website or 'N/A'"/>
</a>
                            </p>
                        </div>

                        <!-- Teachers Section -->
                        <div style="margin-bottom: 20px;">
                            <h3 style="border-bottom: 2px solid #2E86C1; color: #2E86C1; padding-bottom: 5px;">Teachers</h3>
                            <ul style="font-size: 16px; line-height: 1.5; list-style: none; padding: 0;">
                                <t t-foreach="school.teacher_ids" t-as="teacher">
                                    <li>
                                        <strong><t t-esc="teacher.name or 'N/A'"/></strong> - <t t-esc="teacher.subject or 'N/A'"/>
                                    </li>
                                </t>
                            </ul>
                        </div>

                        <!-- Students Section -->
                        <div style="margin-bottom: 20px;">
                            <h3 style="border-bottom: 2px solid #2E86C1; color: #2E86C1; padding-bottom: 5px;">Students</h3>
                            <table style="width: 100%; border-collapse: collapse; font-size: 16px;">
                                <thead>
                                    <tr style="background-color: #D6EAF8;">
                                        <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">Name</th>
                                        <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">Roll Number</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="school.student_ids" t-as="student">
                                        <tr>
                                            <td style="padding: 10px; border: 1px solid #ddd;">
                                                <t t-esc="student.name or 'N/A'"/>
                                            </td>
                                            <td style="padding: 10px; border: 1px solid #ddd;">
                                                <t t-esc="student.roll_number or 'N/A'"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>

                        <!-- Footer -->
                        <div style="text-align: center; margin-top: 30px; color: #616A6B;">
                            <p>Generated by the School Management System</p>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="school_management_school_report_action" model="ir.actions.report">
        <field name="name">School Report</field>
        <field name="model">school_management.school</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">school_management.school_report_template</field>
        <field name="report_file">school_management.school_report_template</field>
        <field name="print_report_name">"School Report"</field>
        <field name="binding_model_id" ref="school_management.model_school_management_school"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
